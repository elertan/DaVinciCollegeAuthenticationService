@{
    ViewData["Title"] = "Home Page";
}

<div class="row" style="margin-top: 20px;">
    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Welkom op de DaVinci Authorization Service</h2>
                    <hr class="primary">
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-lock text-primary sr-icons"></i>
                        <h3>Één account</h3>
                        <p class="text-muted">Overal, één account.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-sign-in text-primary sr-icons"></i>
                        <h3>Stateless Authenticatie</h3>
                        <p class="text-muted">Onze service maakt gebruik van een stateless authenticatie technologie gebaseerd op JsonWebTokens.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-database text-primary sr-icons"></i>
                        <h3>Beheren</h3>
                        <p class="text-muted">Beheer al je applicaties op een plek.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-heart text-primary sr-icons"></i>
                        <h3>Gemaakt met liefde</h3>
                        <p class="text-muted">Elk ontworpen applicatie van een DaVinci student verdient een goed authenticatie platform!</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>